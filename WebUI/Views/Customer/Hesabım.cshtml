@model Entitiess.DTO.CustomersUpdateDto; 

@{
    ViewData["Title"] = "Hesabım";
    Layout = "~/Views/_Shared/_LayoutPage.cshtml";

}
<link href="/css/EticaretCss.css" rel="stylesheet" />
<link href="/css/bootstrap.min.css" rel="stylesheet" />

<div class="wrap">
    <div class="main">

        <div class="col-md-12" style="background-color:#f3f3f3;margin-bottom:15px;margin-top:15px;">
            <div class="row">
                <div class="TextHeader">HESABIM</div>
            </div>
        </div>


        <div class="col-md-12 ProductDiv">
            <div class="row">

                <div class="col-md-3">

                    <ul class="HesabimMenu">
                        <li><a href="#">Hesabım</a></li>
                       
                        
                            <li><a href="/Customer/Siparişlerim">Siparişlerim</a></li>
                        

                        <li><a href="#">İadelerim</a></li>
                        <li><a href="#">Adreslerim</a></li>
                        <li><a href="/Customer/Logout">Çıkış</a></li>
                    </ul>

                </div>

                <div class="col-md-9">
                    @if (Model != null)
                    {
                        <form asp-action="Hesabım" asp-controller="Customer" method="post">

                            <input type="text" name="Id" value="@Model.Id" hidden />

                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="NameSurname" name="NameSurname" value="@Model.NameSurname" placeholder="Adınız Soyadınız :" required />
                            </div>
                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="Email" name="Email" value="@Model.Email" placeholder="E-Mail :" required />
                            </div>

                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="Phone" name="Phone" value="@Model.Phone" placeholder="Telefon :" required />
                            </div>
                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="City" name="Phone" value="@Model.City" placeholder="Şehir :" required />
                            </div>
                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="District" name="Phone" value="@Model.District" placeholder="İlçe :" required />
                            </div>
                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="FullAddress" name="Phone" value="@Model.FullAddress" placeholder="Adres :" required />
                            </div>

                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <input type="text" class="form-control" asp-for="Password" name="Password" value="@Model.Password" placeholder="Şifre :" required />
                            </div>
                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <select name="Advert" class="form-control">
                                    @if (Model.Advert)
                                    {
                                        <option value="True">Email ve Sms Gönderilsin</option>
                                        <option value="False">Email ve Sms Gönderilmesin</option>
                                    }
                                    else
                                    {
                                        <option value="False">Email ve Sms Gönderilmesin</option>
                                        <option value="True">Email ve Sms Gönderilsin</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-12" style="text-align:center;margin-top:15px;margin-bottom:15px;">
                                <select name="Gender" class="form-control">
                                    @if (Model.Gender)
                                    {
                                        <option value="True">Erkek</option>
                                        <option value="False">Kadın</option>
                                    }
                                    else
                                    {
                                        <option value="False">Kadın</option>
                                        <option value="True">Erkek</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-12" style="text-align:center;margin-top:5px;margin-bottom:15px;">
                                <button type="submit" class="btn btn-danger form-control">Güncelle</button>
                            </div>
                        </form>
                        <div class="col-md-12">
                            @if (ViewData["Message"] != null)
                            {
                                @Html.Raw(ViewData["Message"])
                            }
                        </div>

                    }
                    else
                    {
                        <div class="col-md-12" style="padding:25px;text-align:center;font-size:25px;">Kişi Bilgileri BULUNAMADI.</div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>