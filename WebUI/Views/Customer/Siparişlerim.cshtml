
@{
    ViewData["Title"] = "Siparişlerim";
    Layout = "~/Views/_Shared/_LayoutPage.cshtml";    
}

<link href="/css/EticaretCss.css" rel="stylesheet" />
<link href="/css/bootstrap.min.css" rel="stylesheet" />

<div class="wrap">
    <div class="main">
        <div class="col-md-12" style="background-color:#f3f3f3;margin-bottom:15px;margin-top:15px;">
            <div class="row">
                <div class="TextHeader">SİPARİŞLERİM</div>
            </div>
        </div>

        <div class="col-md-12 ProductDiv">
            <div class="row">

                <div class="col-md-3">

                    <ul class="HesabimMenu">
                        <li><a href="#">Hesabım</a></li>
                        <li><a href="/Customer/Siparişlerim">Siparişlerim</a></li>
                        <li><a href="#">İadelerim</a></li>
                        <li><a href="#">Adreslerim</a></li>
                        <li><a href="/Customer/Logout">Çıkış</a></li>
                    </ul>

                </div>

                <div class="col-md-9">                   
                    <form asp-action="Siparişlerim" asp-controller="Customer">
                        <div class="box-body">

                            <table id="example1" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Sipariş</th>
                                        <th>Tarihi</th>
                                        <th>Fiyat</th>
                                        <th>Durumu</th>
                                        <th>Ödeme Türü</th>
                                        <th>Kargo Fiyatı</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.OrderDate</td>
                                                <td>@item.TotalPrice.ToString("C")</td>
                                                <td>@item.OrderStatus</td>
                                                <td>@item.OdemeTuru</td>                                                 
                                                <td>@item.CargoPrice.ToString("C")</td> 
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>                                                               
                </div>
            </div>
        </div>
    </div>
</div>