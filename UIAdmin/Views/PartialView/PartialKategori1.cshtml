<script>
    $(".select1").change(function () {
        $(".Kategori2").load("/PartialView/AltKatagori/" + $(this).val() + "");
        $(".Kategori2").html("");
        $(".Kategori3").html("");
        if ($(this).val() == '0') {
            $(".Kategori2").html("");
            $(".Kategori3").html("");
        }
    });
</script>

<select name="CategoriesId" class="form-control select1">
    <option value="0">Kategori Seçiniz.</option>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <option value="@item.Id">@item.Name</option>
        }
    }
</select>
